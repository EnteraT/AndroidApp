<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.enterat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

   	 <!-- Acceso a Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
   
   <!-- Permisos para utilizar GCM -->
   <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
   
   <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/txt_app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.enterat.interfaces.LoginActivity"
            android:label="@string/txt_app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.enterat.interfaces.ProfesorMainActivity"
            android:label="@string/txt_app_name" >
        </activity>
        <activity
            android:name="com.enterat.interfaces.PadresMainActivity"
            android:label="@string/txt_app_name" >
        </activity>
        <activity
            android:name="com.enterat.interfaces.ProfesorAdd"
            android:label="@string/txt_tarea" >
        </activity>
        <activity
            android:name="com.enterat.interfaces.LookFor"
            android:label="@string/txt_examenes" >
        </activity>
        <activity
            android:name="com.enterat.interfaces.Contenido"
            android:label="@string/txt_tarea" >
        </activity>
        <activity
            android:name="com.enterat.interfaces.AsignaturaActivity"
            android:label="@string/txt_asignaturas" >
        </activity>
        
    </application>

</manifest>
