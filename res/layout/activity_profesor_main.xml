<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProfesorMainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.17" >

        <Button
            android:id="@+id/controlButton"
            style="@style/st_main_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:alpha="0.75"
            android:drawableTop="@android:drawable/ic_menu_edit"
            android:onClick="examClick"
            android:text="@string/control_txt" />

        <Button
            android:id="@+id/faltasButton"
            style="@style/st_main_button"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/controlButton"
            android:alpha="0.75"
            android:drawableTop="@android:drawable/stat_notify_error"
            android:onClick="faltasClick"
            android:text="@string/faltasbutton" />

        <Button
            android:id="@+id/anuncionsButton"
            style="@style/st_main_button"
            android:layout_above="@+id/faltasButton"
            android:layout_alignParentLeft="true"
            android:alpha="0.75"
            android:drawableTop="@android:drawable/ic_popup_reminder"
            android:onClick="anunciosClick"
            android:text="@string/anunciosbutton" />

        <Button
            android:id="@+id/deuresButton"
            style="@style/st_main_button"
            android:layout_alignBaseline="@+id/faltasButton"
            android:layout_alignBottom="@+id/faltasButton"
            android:layout_alignParentLeft="true"
            android:alpha="0.75"
            android:drawableTop="@android:drawable/stat_notify_chat"
            android:onClick="tasksClick"
            android:text="@string/tareas_txt"
            android:textStyle="normal" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/profesorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.77"
            android:text="@string/profesor_txt"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.81"
            android:contentDescription="@string/eldrac_txt"
            android:onClick="webClick"
            android:src="@drawable/ic_launcher" />

    </LinearLayout>

</LinearLayout>