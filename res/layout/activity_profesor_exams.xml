<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProfesorExamsActivity" >

    <ScrollView
         android:id="@+id/scrollView1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical" >
             
     <TextView
        android:id="@+id/assignaturaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/assignatura_txt"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/assignaturaSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/assignatura_array" />  

    <TextView
        android:id="@+id/cursTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/curs_txt"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/cursSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"         
        android:entries="@array/curs_array" />    
    
    <TextView
        android:id="@+id/dataTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data_control_txt"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <DatePicker
        android:id="@+id/entregaDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/deuresTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contingut_txt"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/deuresEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:inputType="textMultiLine" >   
    </EditText>

    <Button
        android:id="@+id/publicarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="@string/publicar_txt"
        android:onClick="publicarControlClick" />


         </LinearLayout>
         
     </ScrollView>

 </RelativeLayout>